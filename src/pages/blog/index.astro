---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

interface Post {
  data: {
    title: string;
    description?: string;
    externalHeroImage?: string;
    heroImage?: string;
    category?: string;
  };
  slug: string;
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Reset CSS */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html, body {
				width: 100%;
				overflow-x: hidden;
			}

			body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                background-color: #f0f0f0;
            }

			main {
				max-width: 800px;
                margin: 0 auto;
                padding: 1rem;
			}

            section {
                margin-top: 1rem;
            }

			ul {
				list-style: none;
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));  /* Tetap fleksibel di desktop */
                gap: 1rem;
			}

			ul li {
                background-color: #fff;
                border: 1px solid #ddd;
                border-radius: 4px;
                overflow: hidden;
                box-shadow: 0 1px 2px rgba(0,0,0,0.1);
                transition: transform 0.2s ease, box-shadow 0.2s ease;
                margin-bottom: 1rem; /* Kembalikan margin */

			}

            ul li:hover {
                transform: translateY(-4px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            }

			ul li a {
                display: block;
				text-decoration: none;
                color: inherit;
			}

            .image-container {
                width: 100%;
                height: 150px;
                overflow: hidden;
            }

			ul li img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
                display: block;
			}

            .no-image-placeholder {
                width: 100%;
                height: 150px;
                display: flex;
                justify-content: center;
                align-items: center;
                color: #666;
                font-style: italic;
                background-color: #eee;

            }

            .text-content {
                padding: 0.5rem;
                width: 100%;
            }

			.title {
				margin: 0 0 0.25rem 0;
				font-size: 1rem;
				font-weight: bold;
                line-height: 1.2;
			}

            .smaller-text, .category {
                font-size: 0.7rem;
                color: #777;
                margin: 0.25rem 0;
            }

            .date {
                font-size: 0.6rem;
                color: #999;
                margin: 0.25rem 0 0 0;
            }



            /* Responsif (HP) */
            @media (max-width: 720px) {
                main {
                    padding: 0.5rem; /*  Kembalikan ke 0.5rem, atau sesuaikan */
                }

                section {
                    margin-top: 0.75rem;
                }

                ul {
                    grid-template-columns: 1fr; /*  PAKSA SATU KOLOM */
                    gap: 0.75rem;            /*  Sesuaikan gap */
                }

                .image-container {
                    height: auto;
                }
              	.text-content{
                    padding: 0.5rem;
                }
            }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{posts.map((post: Post) => (
						<li>
							<a href={`/blog/${post.id}/`}>
                                <div class="image-container">
                                    {post.data.externalHeroImage ? (
                                        <img src={post.data.externalHeroImage} alt={post.data.title || "Thumbnail"} />
                                    ) : post.data.heroImage ? (
                                        <img src={post.data.heroImage} alt={post.data.title || "Thumbnail"} />
                                    ) : (
                                        <div class="no-image-placeholder">
                                            <p>No Image Available</p>
                                        </div>
                                    )}
                                </div>
                                <div class="text-content">
                                    <h4 class="title">{post.data.title}</h4>
                                    {post.data.description && (
                                        <p class="smaller-text">{post.data.description}</p>
                                    )}

                                    <hr style={{ border: 'none', borderTop: '1px solid #eee', margin: '0.5rem 0' }} />

                                    {post.data.category && (
                                         <p class="category">{post.data.category}</p>
                                    )}

                                    <p class="date">
                                        <FormattedDate date={post.data.pubDate} />
                                    </p>
                                </div>
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
