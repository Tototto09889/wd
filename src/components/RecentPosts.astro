---
// src/components/RecentPosts.astro
import { getCollection } from 'astro:content';
import FormattedDate from './FormattedDate.astro'; // Pastikan path ini BENAR

// Ambil semua postingan dari koleksi 'blog'
const allBlogPosts = await getCollection('blog');

// Urutkan postingan dari yang terbaru ke terlama berdasarkan pubDate
const sortedPosts = allBlogPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Ambil sejumlah postingan terbaru (misalnya, 3)
// Anda bisa mengubah angka 3 ini sesuai kebutuhan
const recentPosts = sortedPosts.slice(0, 3);
---

<section>
  <h2>Recent Posts</h2> {/* Judul bagian (bisa diubah/dihapus) */}
  <ul>
    {recentPosts.map((post) => (
      <li>
        <a href={`/blog/${post.id}/`}>{post.data.title}</a> {/* Tautan ke halaman postingan */}
        <p>{post.data.description}</p> {/* Deskripsi singkat */}
        <time datetime={post.data.pubDate.toISOString()}>
          <FormattedDate date={post.data.pubDate} /> {/* Tanggal, diformat */}
        </time>
      </li>
    ))}
  </ul>
</section>

<style>
  /* Gaya CSS bawaan (bisa disesuaikan) */
  ul {
    list-style: none; /* Hilangkan bullet points */
    padding: 0;      /* Hilangkan padding bawaan */
  }

  li {
    margin-bottom: 1rem; /* Spasi antar postingan */
  }

  a {
    text-decoration: none; /* Hilangkan garis bawah tautan */
    color: inherit;       /* Gunakan warna teks default (atau ganti) */
  }

  a:hover {
    text-decoration: underline; /* Garis bawah saat hover (opsional) */
  }

