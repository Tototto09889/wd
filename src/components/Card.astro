---
// src/components/Card.astro
export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    pubDate?: string;
    heroImage?: string;
  };
  url: string;
}

const { frontmatter, url } = Astro.props;
---

<li class="card"> {/* PENTING: Harus ada class="card" */}
  <a href={url}>
    {frontmatter.heroImage && (
      <img src={frontmatter.heroImage} alt={frontmatter.title}  />
    )}
    <h2>{frontmatter.title}</h2>
    {frontmatter.description && <p>{frontmatter.description}</p>}
    {frontmatter.pubDate && (
      <time datetime={frontmatter.pubDate}>
        {new Date(frontmatter.pubDate).toLocaleDateString('id-ID', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </time>
    )}
  </a>
</li>
<style>
/* CSS untuk Card, sudah dipindahkan ke search.astro */
</style>

