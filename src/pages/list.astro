        color: white; /* Warna teks */
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        margin-left: 5px; /* Jarak dari input */
        z-index: 2; /* Pastikan di atas input */
        position: relative; /* atau static, jika perlu */

    }
    /* Style the icon */
    #search-button i {
        font-size: 18px;
        color: #0056b3;
    }
    #search-button:hover {
        /* Hover style untuk tombol teks */
       background-color: #003e80;
    }


    .letter-section {
      margin-bottom: 25px;
    }

    .letter-section h5 {
      font-size: 1.4em;
      margin-bottom: 8px;
      color: #0056b3;
      font-weight: bold;
      border-bottom: 2px solid #0056b3;
      display: inline-block;
      padding-bottom: 5px;
    }
     /*Judul List Judul*/
     #main-title {
        text-align: center;
        color: #0056b3;
        margin-bottom: 30px;
        font-size: 2.5em;
        font-weight: bold;
      }

    .judul-item {
      margin-left: 25px;
      background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="6" height="6" viewBox="0 0 6 6"><circle cx="3" cy="3" r="2" fill="%230056b3"/></svg>');
      background-repeat: no-repeat;
      background-position: left center;
      padding-left: 15px;

    }
    /* Sembunyikan item yang tidak cocok dengan pencarian */
    .judul-item.hidden {
        display: none;
    }

    .judul-item a {
      text-decoration: none;
      color: #333;
      display: block;
      padding: 6px 0;
      transition: color 0.2s ease, background-color 0.2s ease;
    }

    .judul-item a:hover {
      color: #0056b3;
      background-color: #e9ecef;
      text-decoration:underline;
    }

    /* Pesan "Tidak ditemukan" */
    #no-results {
      color: #777;
      font-style: italic;
      margin-top: 10px;
      display: none; /* Sembunyikan secara default */
    }
     /*Media Query*/
     @media (max-width: 768px) {
        #daftar-az{
            padding: 15px;
            margin: 20px;
        }
        #search-form{
            width: 95%; /* Lebih lebar di mobile */
            max-width: none; /* Hilangkan max-width */
            align-items: flex-start;
        }
         #search-input {
            border-radius: 4px;
            margin-right: 0;
            padding: 6px;
            font-size: 14px;

