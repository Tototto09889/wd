---
// src/components/Sidebar.astro
import RecentPosts from './RecentPosts.astro'; // Import komponen RecentPosts
---

<aside class="sidebar">
    <RecentPosts />
    {/* Widget lain bisa ditambahkan di sini nanti */}
</aside>

<style>
.sidebar {
    /* Gaya dasar untuk sidebar */
    padding: 1rem;
    background-color: #f8f9fa; /* Atau warna lain */
    border: 1px solid #dee2e6;
    border-radius: 0.5rem;
}

/* Gaya untuk RecentPosts di dalam sidebar (jika perlu beda dari yang di halaman utama) */
/* .sidebar .recent-posts-container { ... } */

@media (max-width: 768px) {
    .sidebar {
        /* Gaya untuk sidebar di mobile (biasanya jadi full-width) */
        width: 100%;
        margin-bottom: 1rem; /* Spasi antara sidebar dan konten utama */
    }
}
</style>
