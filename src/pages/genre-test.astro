---
// src/pages/genre-test.astro
import BaseLayout from '../layouts/BaseLayout.astro'; //  Ganti dengan layout Anda, jika ada

// Data genre (sementara, statis)
const genres = [
  "Action", "Adult", "Adventure", "Cars", "Comedy", "Dementia", "Demons", "Drama",
  "Fanfiction", "Fantasy", "Game", "Gender Bender", "Harem", "Historical",
  "Horror", "Isekai", "Josei", "Kids", "Magic", "Martial Arts", "Mature",
  "Mecha", "Military", "Music", "Mystery", "Parody", "Police", "Psychological",
  "Romance", "Samurai", "School Life", "Sci-Fi", "Seinen", "Shoujo",
  "Shoujo Ai", "Shounen", "Shounen Ai", "Slice of Life", "Space", "Sports",
  "Super Power", "Supernatural", "Suspen", "Thriller", "Tragedy", "Vampire",
  "Yuri"
];

---

<BaseLayout title="Genre Test">
  <main>
    <h1>Genre Test</h1>
    <div class="genre-grid">
      {genres.map((genre) => (
        <a href="#" class="genre-button">{genre}</a>
      ))}
    </div>
  </main>
</BaseLayout>

<style>
/* CSS Reset (PENTING!) */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box; /* Ini SANGAT penting */
}

body {
    font-family: sans-serif; /* Contoh */
}

main {
    width: 100%;  /* Gunakan 100% */
    max-width: 100%; /* Hapus atau set ke 100% */
    margin: 0 auto;
    padding: 0.5rem; /* Kurangi padding, terutama di mobile */
}

h1 {
    text-align: center;
    margin-bottom: 1rem; /* Kurangi margin */
}

/* Ini yang PENTING untuk membuat tampilan grid */
.genre-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(100px, 1fr)); /* Lebih kecilkan minmax */
  gap: 0.5rem;  /* Kurangi gap */
  justify-content: center; /* Pusatkan grid */
}

.genre-button {
  display: inline-block;
  padding: 0.5rem 1rem;
  background-color: #cc0000;
  color: white;
  text-decoration: none;
  border-radius: 5px;
  text-align: center;
  transition: background-color 0.2s ease;
  border: none;
  font-size: 0.9rem; /* Perkecil sedikit */
  word-break: break-word; /* Tambahkan ini */

}

.genre-button:hover {
  background-color: #990000;
}

/* Mobile Styles */
@media (max-width: 768px) { /* Atau breakpoint yang Anda gunakan */
  .genre-grid {
        grid-template-columns: repeat(auto-fit, minmax(80px, 1fr)); /* Perkecil lagi di mobile*/
        gap: 0.5rem; /* Perkecil gap di mobile */
    }
    .genre-button{
        font-size: 0.8rem; /*Perkecil lagi di mobile*/
    }
}
</style>
