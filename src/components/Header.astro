---
// src/components/Header.astro
import { SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content'; // Impor getCollection

// Ambil semua postingan di sini (di Header.astro)
const allPosts = await getCollection('blog');

// JSON.stringify() di sini.  Ini PENTING!
const allPostsJSON = JSON.stringify(allPosts.map(post => ({
    title: post.data.title,
    slug: post.id,
    // Tambahkan data lain yang mungkin ingin Anda tampilkan di hasil pencarian, misalnya deskripsi
    description: post.data.description,
})));

---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="dropdown">
      <button class="dropbtn" onclick="myFunction()">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M2 6H22M2 12H22M2 18H22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <div id="myDropdown" class="dropdown-content">
        <a href="/">Beranda</a>
        <a href="/blog">Postingan</a>
        <a href="/list">List Novel</a>
        <a href="/disclaimer">Disclaimer</a>
        <a href="/about">Tentang</a>
        <div class="search-container-dropdown">
          <input type="text" id="search-input-header" placeholder="Cari..." oninput="searchPosts(this.value)" />
          <ul id="search-results" class="search-results-list"></ul> {/* Tambahkan ul untuk hasil */}
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  /* Toggle dropdown */
  function myFunction() {
    document.getElementById("myDropdown").classList.toggle("show");
  }

  window.onclick = function(event) {
    if (!event.target.matches('.dropbtn')) {
      var dropdowns = document.getElementsByClassName("dropdown-content");
      for (var i = 0; i < dropdowns.length; i++) {
        var openDropdown = dropdowns[i];
        if (openDropdown.classList.contains('show')) {
          openDropdown.classList.remove('show');
        }
      }
    }
  }

  // Data postingan (dari server, di-parse dari JSON)
  const posts = JSON.parse(JSON.stringify(<Fragment set:html={allPostsJSON} />));

    function searchPosts(searchTerm) {
        const resultsList = document.getElementById('search-results');
        resultsList.innerHTML = ''; // Kosongkan hasil sebelumnya

        const term = searchTerm.toLowerCase();

        if (term.trim() === "") {
            resultsList.style.display = 'none'; // Sembunyikan jika input kosong
            return;
        }

        const filteredPosts = posts.filter(post => post.title.toLowerCase().includes(term));

        if (filteredPosts.length > 0) {
            filteredPosts.forEach(post => {
                const listItem = document.createElement('li');
                const link = document.createElement('a');
                link.href = `/blog/${post.id}`;
                link.textContent = post.title;
                listItem.appendChild(link);
                resultsList.appendChild(listItem);
            });
            resultsList.style.display = 'block'; // Tampilkan daftar hasil
        } else {
            resultsList.style.display = 'none'; // Sembunyikan jika tidak ada hasil
        }
}

// Event listener di-attach langsung di HTML (oninput)
</script>

