---
export interface Props {
  title: string;
  date: string;
  genre?: string[];
}

const { title, date, genre } = Astro.props;
---

<article>
  <h1>{title}</h1>
  <p><strong>Date:</strong> {date}</p>
  
  {genre && genre.length > 0 && (
    <p><strong>Genres:</strong> {genre.join(", ")}</p>
  )}

  <slot />
</article>
