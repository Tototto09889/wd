  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  /* Dropdown container */
  .dropdown {
    position: relative;
    display: inline-block;
    margin-left: auto; /* Aligns dropdown to the right */
  }

  /* Dropdown button */
  .dropbtn {
    background-color: transparent;
    color: var(--black);
    padding: 1em 0.5em;
    font-size: 1em;
    border: none;
    cursor: pointer;
