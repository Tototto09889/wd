---
// src/pages/genre-test.astro
import BaseLayout from '../layouts/BaseLayout.astro'; //  Ganti dengan layout Anda, jika ada

// Data genre (sementara, statis)
const genres = [
  "Action", "Adult", "Adventure", "Cars", "Comedy", "Dementia", "Demons", "Drama",
  "Fanfiction", "Fantasy", "Game", "Gender Bender", "Harem", "Historical",
  "Horror", "Isekai", "Josei", "Kids", "Magic", "Martial Arts", "Mature",
  "Mecha", "Military", "Music", "Mystery", "Parody", "Police", "Psychological",
  "Romance", "Samurai", "School Life", "Sci-Fi", "Seinen", "Shoujo",
  "Shoujo Ai", "Shounen", "Shounen Ai", "Slice of Life", "Space", "Sports",
  "Super Power", "Supernatural", "Suspen", "Thriller", "Tragedy", "Vampire",
  "Yuri"
];

---

<BaseLayout title="Genre Test">
  <main>
    <h1>Genre Test</h1>
    <div class="genre-grid">
      {genres.map((genre) => (
        <a href="#" class="genre-button">{genre}</a>
      ))}
    </div>
  </main>
</BaseLayout>

<style>
main {
  width: 95%;
  max-width: 800px; /* Atau sesuaikan */
  margin: 0 auto;
  padding: 2rem;
}

h1 {
  text-align: center;
  margin-bottom: 2rem;
}

/* Ini yang PENTING untuk membuat tampilan grid */
.genre-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr)); /* Sesuaikan minmax */
  gap: 1rem;  /* Spasi antar tombol */
  justify-content: center; /* Pusatkan grid */
}

.genre-button {
  display: inline-block; /* Penting agar padding, margin, dll. berfungsi dengan baik */
  padding: 0.5rem 1rem; /* Sesuaikan */
  background-color: #cc0000; /* Merah, sesuaikan */
  color: white;
  text-decoration: none;
  border-radius: 5px; /* Sesuaikan */
  text-align: center;
  transition: background-color 0.2s ease; /* Efek hover */
  border: none; /* Hapus border bawaan */
  font-size: 1rem; /* Sesuaikan */
  cursor: pointer; /* Ubah kursor menjadi pointer */
}

.genre-button:hover {
  background-color: #990000; /* Merah lebih gelap, sesuaikan */
}
</style>
