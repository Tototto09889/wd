---
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <button class="menu-btn" onclick="toggleMenu()">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M2 6H22M2 12H22M2 18H22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>

    <div id="mySidebar" class="sidebar">
      <a href="javascript:void(0)" class="closebtn" onclick="closeMenu()">&times;</a>
      <a href="/">Beranda</a>
      <a href="/blog">Postingan</a>
      <a href="/list">List Novel</a>
      <a href="/disclaimer">Disclaimer</a>
      <a href="/about">Tentang</a>

      <form class="search-form" action="/search" method="GET">
        <input type="text" name="q" placeholder="Search" />
        <button type="submit">Search</button>
      </form>
    </div>
  </nav>
</header>

<script>
function toggleMenu() {
    const sidebar = document.getElementById("mySidebar");
    if (sidebar.style.right === "0px") {
        closeMenu();
    } else {
        openMenu();
    }
}

function openMenu() {
  document.getElementById("mySidebar").style.right = "0px";
}

function closeMenu() {
  document.getElementById("mySidebar").style.right = "-100%"; // Sembunyikan ke kanan (penuh)
}
</script>

<style>
header {
  margin: 0;
  padding: 0 1em;
  background: white;
  box-shadow: 0 2px 8px rgba(var(--black), 5%);
}

h2 {
  margin: 0;
  font-size: 1em;
}

h2 a,
h2 a.active {
  text-decoration: none;
}

nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }

/* Sidebar Styles */
.sidebar {
  height: 100%;
  width: 100%; /* Lebar penuh */
  position: fixed;
  z-index: 1;
  top: 0;
  right: -100%; /* Awalnya tersembunyi di kanan (penuh) */
  background-color: white;
  overflow-x: hidden;
  transition: 0.5s;
  padding-top: 60px;
}

.sidebar a {
  padding: 8px 8px 8px 32px;
  text-decoration: none;
  font-size: 18px;
  color: #333;
  display: block;
  transition: 0.3s;
  border-bottom: 1px solid #ddd; /* Garis pembatas */
}

.sidebar a:last-child{
    border-bottom: none;
}

.sidebar a:hover {
  color: #6495ed;
}

.sidebar .closebtn {
  position: absolute;
  top: 0;
  right: 25px;
  font-size: 36px;
  margin-left: 50px; /* Mungkin perlu dihilangkan */
}
.menu-btn {
    background-color: transparent;
    color: var(--black);
    padding: 1em 0.5em;
    font-size: 1em;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Styling Form Pencarian */
.search-form {
  padding: 8px 8px 8px 32px;
  display: flex;
  align-items: center;
}

.search-form input[type="text"] {
  padding: 8px;
  margin-right: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  flex-grow: 1;
}

.search-form button {
  padding: 8px 12px;
  background-color: #e84934;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.search-form button:hover {
  background-color: #c82333;
}
</style>
