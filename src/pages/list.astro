    // Fungsi untuk membuat URL yang valid
    function buatURL(judul) {
      let url = judul.toLowerCase();
      url = url.replace(/ /g, '-');
      url = url.replace(/[^a-z0-9-]/g, '');
      url = url.replace(/-+/g, '-');
      url = url.replace(/^-+|-+$/g, '');
      return url;
    }

     // Fungsi untuk membuat dan menampilkan daftar judul
    function tampilkanDaftar(judulListUntukDitampilkan) {
        daftarContainer.innerHTML = ''; // Kosongkan kontainer
        //Sembunyikan pesan "tidak ditemukan"
        noResultsMessage.style.display = 'none';

        const judulPerHuruf = {};
        for (let i = 65; i <= 90; i++) {
        judulPerHuruf[String.fromCharCode(i)] = [];
        }
        judulPerHuruf['Other'] = [];

        judulListUntukDitampilkan.forEach(judul => {
            const hurufPertama = judul.charAt(0).toUpperCase();
            if (judulPerHuruf[hurufPertama]) {
                judulPerHuruf[hurufPertama].push(judul);
            } else {
                judulPerHuruf['Other'].push(judul);
            }
        });

        if (judulPerHuruf['Other'].length > 0) {
            const otherSection = document.createElement('div');
            otherSection.classList.add('letter-section');
            const heading = document.createElement('h5');
            heading.textContent = "Other";
            otherSection.appendChild(heading);

            judulPerHuruf['Other'].forEach(judul => {
                const judulItem = document.createElement("div");
                judulItem.classList.add("judul-item");
                const link = document.createElement("a");
                link.href = `https://wispy-dream.floral.workers.dev/blog/${buatURL(judul)}`;
                link.textContent = judul;
                judulItem.appendChild(link);
                otherSection.appendChild(judulItem);
            });
            daftarContainer.appendChild(otherSection);
        }
    // --- Tampilkan Bagian A-z
        for (let i = 65; i <= 90; i++) {
            const huruf = String.fromCharCode(i);
            const judulDiHurufIni = judulPerHuruf[huruf];
            if(judulDiHurufIni.length > 0){
                const letterSection = document.createElement("div");
                letterSection.classList.add("letter-section");

                const heading = document.createElement("h5");
                heading.textContent = huruf;
                letterSection.appendChild(heading);

                judulDiHurufIni.forEach((judul) => {
