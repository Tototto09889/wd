---
// src/pages/genres/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro'; // Ganti dengan layout Anda
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');

// Kumpulkan semua genre unik, lalu urutkan
const allGenres = [...new Set(allPosts.flatMap(post => post.data.genres))].sort();

---

<BaseLayout title="Genre List" description="List of all genres.">
  <main>
    <h1>Genre List</h1>
    <div class="genre-grid">
      {allGenres.map(genre => (
        <a href={`/genres/${genre.toLowerCase().replace(/\s+/g, '-')}/`} class="genre-button">
          {genre}
        </a>
      ))}
    </div>
  </main>
</BaseLayout>

<style>
/* ... (CSS Anda, tidak perlu diubah banyak) ... */
main {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 0.5rem;
}

h1 {
    text-align: center;
    margin-bottom: 1rem;
}
.genre-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: 0.5rem;
    justify-content: center;
}
.genre-button {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #cc0000;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    text-align: center;
    transition: background-color 0.2s ease;
    border: none;
    font-size: 0.9rem;
    word-break: break-word;
}

.genre-button:hover {
    background-color: #990000;
}

/* Mobile Styles */
@media (max-width: 768px) {
  .genre-grid {
        grid-template-columns: repeat(auto-fit, minmax(80px, 1fr)); /*Perkecil ukuran di mobile*/
        gap: 0.5rem; /* Perkecil gap di mobile */
    }
    .genre-button{
        font-size: 0.8rem; /*Perkecil lagi di mobile*/
    }
}
</style>
